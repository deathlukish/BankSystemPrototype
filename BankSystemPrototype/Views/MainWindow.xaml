        <StatusBar Grid.Row="4" Grid.ColumnSpan="3">
            <UniformGrid>
                <TextBlock Text="ыввы"></TextBlock>
            </UniformGrid>
        </StatusBar>
        
        <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0" Grid.Column="0" Margin="5" x:Name="ClientType" SelectedItem="{Binding ClientTypeEnum}" SelectionChanged="ClientType_SelectionChanged"></ComboBox>
            <ListBox ItemsSource="{Binding Clients}" 
                 SelectedItem="{Binding Path=SelectedClientFrom}" x:Name="ListClientsFrom" 
                 Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Margin="5,5,5,5">
